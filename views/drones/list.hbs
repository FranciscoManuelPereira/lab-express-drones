<h2>Available drones</h2>

{{#each drones}}
<div>
    <h3>{{name}}</h3>
    <p>Number of propellers {{propellers}}</p>
    <p>Drone's maximum speed: {{maxSpeed}} meters per second</p>
    {{!-- <a href="/drones/{{id}}">See details</a>
    <a href="/drones/create">Create Drone</a> --}}
    <a href="/drones/{{_id}}/edit">Edit</a>
    <form action="/drones/{{_id}}/delete" method="post">
    <button type="submit">Delete Drone</button>
    </form>
</div>
{{/each}}

